{
  "version": 2,

  {
    "src": "server/index.js",
    "use": "@vercel/node"
  },
  {
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/dist/index.html"
      }
    ]
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ]
}   